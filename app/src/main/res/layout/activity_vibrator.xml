<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navbar.VibratorActivity">


    <TextView
        android:id="@+id/vibrator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrator"
        android:textSize="50dp"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/vibrator_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vibrator_title"
        android:layout_marginTop="50dp">


        <RadioButton
            android:id="@+id/vibrator_radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Vibration 0"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:layout_marginVertical="10dp"/>

        <RadioButton
            android:id="@+id/vibrator_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration 1"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:layout_marginVertical="10dp"/>

        <RadioButton
            android:id="@+id/vibrator_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration 2"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:layout_marginVertical="10dp"/>

        <RadioButton
            android:id="@+id/vibrator_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration 3"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:layout_marginVertical="10dp"/>

        <RadioButton
            android:id="@+id/vibrator_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibration 4"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="30dp"
            android:layout_marginVertical="10dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:textSize="15dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/design_default_color_primary_dark"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_navbar"
        />

</RelativeLayout>